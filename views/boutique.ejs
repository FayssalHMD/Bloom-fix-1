<%# views/boutique.ejs %>

<!DOCTYPE html>
<html lang="fr" class="">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link rel="icon" type="image/png" href="/images/title-icon.png">
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <%- include('partials/header') %>

    <main class="boutique-page">
        <div class="showcase-container">
            <h1 class="showcase-title">Notre Collection Complète</h1>

            <!-- Products Section -->
            <section class="product-grid-section" id="products-section">
                <h2 class="grid-section-title">Nos Produits</h2>
                <div class="boutique-grid">
                    <% if (products && products.length > 0) { %>
                        <% products.forEach(product => { %>
                            <article class="product-card">
                                <button class="wishlist-btn <%= (locals.userDetails && locals.userDetails.wishlist.some(item => item.productId && item.productId.toString() === product._id.toString())) ? 'active' : '' %>" aria-label="Ajouter à la wishlist" data-item-id="<%= product._id %>" data-item-type="Product">
                                    <svg class="heart-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" /></svg>
                                </button>
                                <div class="product-image-wrapper">
                                    <img src="<%= (product.mainImage && product.mainImage.url) ? product.mainImage.url : product.mainImage %>" alt="<%= product.name %>" class="product-image">
                                </div>
                                <div class="product-card-content">
                                    <h3><%= product.name %></h3>
                                    <p class="product-description"><%= product.short_description %></p>
                                    <span class="product-price"><%= product.price %> DA</span>
                                    <a href="/produit/<%= product.id %>" class="product-btn">Voir les détails</a>
                                </div>
                            </article>
                        <% }) %>
                    <% } else { %>
                        <p class="no-results-message">Aucun produit à afficher pour le moment.</p>
                    <% } %>
                </div>
            </section>

            <!-- Packs Section -->
            <section class="pack-grid-section" id="packs-section">
                <h2 class="grid-section-title">Nos Packs</h2>
                <div class="boutique-grid">
                    <% if (packs && packs.length > 0) { %>
                        <% packs.forEach(pack => { %>
                            <article class="pack-card">
                                <button class="wishlist-btn <%= (locals.userDetails && locals.userDetails.wishlist.some(item => item.packId && item.packId.toString() === pack._id.toString())) ? 'active' : '' %>" aria-label="Ajouter à la wishlist" data-item-id="<%= pack._id %>" data-item-type="Pack">
                                    <svg class="heart-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" /></svg>
                                </button>
                                <div class="pack-badge"><%= pack.savingsText %></div>
                                <div class="product-image-wrapper">
                                    <img src="<%= (pack.mainImage && pack.mainImage.url) ? pack.mainImage.url : pack.mainImage %>" alt="<%= pack.name %>" class="product-image">
                                </div>
                                <div class="pack-card-content">
                                    <h3><%= pack.name %></h3>
                                    <p class="pack-contents"><%= pack.contents %></p>
                                    <div class="pack-pricing">
                                        <span class="original-price"><%= pack.originalPrice %> DA</span>
                                        <span class="discounted-price"><%= pack.discountedPrice %> DA</span>
                                    </div>
                                    <a href="/packs/<%= pack.id %>" class="product-btn">Voir les détails</a>
                                </div>
                            </article>
                        <% }) %>
                    <% } %>
                </div>
            </section>
        </div>
    </main>

    <%- include('partials/footer') %>
    <%- include('partials/modals') %>
 
</body>
</html>